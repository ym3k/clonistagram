<%= form_with(model: @user, local: true, url: user_path, html: { multipart: true, :id=>'form_id' } ) do |form| %>

  <div class="row">
    <div class="col-md-8 col-md-offset-4 col-sm-8 col-sm-offset-4 col-xs-9 col-xs-offset-3">
      <%= form.file_field :avatar, id: :user_avatar %>
    </div>
      <%= 
        #form.hidden_field :image_cache
        form.hidden_field :avatar_cache
        # ↑ コレじゃだめ?
      %>
  </div>
  <div class="actions">
    <%= form.submit 'アバターを更新', class: "btn btn-default" %>
    <%=
      link_to 'アバターを削除', user_path(@user, user: {remove_avatar: 1} ), method: :put,
          data: { confirm: 'アバターを削除しますか?' }, class: 'btn btn-danger'
    %>
  </div>
<% end %>
